{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose-debug-up",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "up",
                "-d",
                "--build"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "docker-compose-debug-down",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "down"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "docker-compose-debug-logs",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "logs",
                "-f"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "docker-compose-debug-rebuild",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "up",
                "-d",
                "--build",
                "--force-recreate"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
