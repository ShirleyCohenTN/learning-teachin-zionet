{
  "name": "ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui/components/src",
  "projectType": "library",
  "tags": ["type:ui", "scope:frontend"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/ui/components/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ui/components",
        "tsConfig": "libs/ui/components/tsconfig.json",
        "entryFile": "libs/ui/components/src/index.ts",
        "external": ["react", "react-dom", "react/jsx-runtime"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "assets": [
          {
            "glob": "libs/ui/components/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "configDir": "libs/ui/components/.storybook",
        "port": 4601
      },
      "configurations": {
        "ci": { "quiet": true },
        "development": {}
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "libs/ui/components/.storybook",
        "outputDir": "dist/storybook/ui"
      },
      "configurations": {
        "ci": { "quiet": true },
        "development": {}
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "ui:build-storybook",
        "staticFilePath": "dist/storybook/ui",
        "port": 5601
      },
      "configurations": {
        "ci": { "buildTarget": "ui:build-storybook:ci" },
        "development": { "buildTarget": "ui:build-storybook" }
      }
    }
  }
}
